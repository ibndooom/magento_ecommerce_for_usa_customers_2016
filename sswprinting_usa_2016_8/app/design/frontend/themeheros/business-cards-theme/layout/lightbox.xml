<?xml version="1.0" encoding="UTF-8"?>
<layout version="0.1.0">    
    <catalog_product_view>
        <reference name="head">			      
	    <action method="addJs" ifconfig="lightbox/general/enabled"><script>themeheros/VS_lightbox/lightbox.js</script></action>		
		 <action method="addCss" ifconfig="lightbox/general/enabled"><stylesheet>themeheros/VS_lightbox/css/lightbox.css</stylesheet></action>
        </reference>
        <reference name="product.info.media">
           <action method="setTemplate" ifconfig="lightbox/general/enabled"><template>lightbox/media.phtml</template></action>
        </reference>
    </catalog_product_view> 
 
</layout>

