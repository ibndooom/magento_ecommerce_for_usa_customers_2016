<?php if($this->getItemCount()): ?>
<div class="clear"></div>
<section class="crosssell category-products box-collateral">
    <h2 class="upsell-ttl"><?php echo $this->__('Based on your selection, you may be interested in the following items:') ?></h2>
    <ul id="crosssell-products-list" class="products-grid thumbnails row">
    <?php foreach ($this->getItems() as $_item): ?>
        <li class="item span3">
        	<div class="thumbnail relative">
            	<h3 class="product-name"><a href="<?php echo $_item->getProductUrl() ?>"><?php echo $this->escapeHtml($_item->getName()) ?></a></h3>
            </div>
            <a class="product-image" href="<?php echo $_item->getProductUrl() ?>" title="<?php echo $this->escapeHtml($_item->getName()) ?>">
                <img src="<?php echo $this->helper('catalog/image')->init($_item, 'thumbnail')->keepFrame(false)->resize(240) ?>" alt="<?php echo $this->escapeHtml($_item->getName()) ?>" />
            </a>
            <div class="caption list-captn" align="center">
            	<?php echo $this->helper('core/string')->truncate($_item->getShortDescription(),60,'...', $_remainder, false) ?>
                <div class="btn-group">
                	<button type="button" title="<?php echo $this->__('Add to Cart') ?>" class="select-design" onclick="setLocation('<?php echo $this->getAddToCartUrl($_item) ?>')"><span><span><?php echo $this->__('Select Design') ?></span></span></button>
                </div>
            </div>                
			<?php //echo $this->getPriceHtml($_item, true) ?>
        </li>
    <?php endforeach; ?>
