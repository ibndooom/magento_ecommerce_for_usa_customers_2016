<?xml version="1.0" encoding="UTF-8"?>

<config>
    <modules>
        <Pixopa_Checkout>
             <version>0.1.0</version>
        </Pixopa_Checkout>
    </modules>
    <global>
    	<blocks>
	        <checkout>
	        	<rewrite>
	        		<cart>Pixopa_Checkout_Block_Cart</cart>
	        	</rewrite>
	        </checkout>
	        <adminhtml>
	        	<rewrite>
	        		<sales_order_view_items_renderer_default>Pixopa_Checkout_Block_Sales_Order_View_Items_Renderer_Default</sales_order_view_items_renderer_default>
	        	</rewrite>
	        </adminhtml>
        </blocks>
        <helpers>
            <pixopa_checkout>
                <class>Pixopa_Checkout_Helper</class>
            </pixopa_checkout>
            <checkout>
                <rewrite>
                    <cart>Pixopa_Checkout_Helper_Cart</cart>
                </rewrite>
            </checkout>
        </helpers>
        <models>
        	<checkout>
	        	<rewrite>
	        		<cart>Pixopa_Checkout_Model_Cart</cart>
	        	</rewrite>
	        </checkout>
            <px_checkout>
                <class>Pixopa_Checkout_Model</class>
                <resourceModel>px_checkout_mysql4</resourceModel>
            </px_checkout>
            <px_checkout_mysql4>
                <class>Pixopa_Checkout_Model_Mysql4</class>
            </px_checkout_mysql4>
		</models>
        <resources>
            <px_checkout_setup>
                <setup>
                    <module>Pixopa_Checkout</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </px_checkout_setup>
            <px_checkout_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </px_checkout_write>
            <px_checkout_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </px_checkout_read>
        </resources>
    </global>
    <frontend>
        <layout>
            <updates>
                <pixopa_checkout>
                    <file>px_checkout.xml</file>
                </pixopa_checkout>
            </updates>
        </layout>
        <routers>
            <pixopa_checkout>
                <use>standard</use>
                <args>
                    <module>Pixopa_Checkout</module>
                    <frontName>px_checkout</frontName>
                </args>
            </pixopa_checkout>
            <checkout>
                <args>
                    <modules>
                        <Pixopa_Checkout before="Mage_Checkout">Pixopa_Checkout</Pixopa_Checkout>
                    </modules>
                </args>
            </checkout>
        </routers>
        <default>
            <router>px_checkout</router>
        </default>
    </frontend>
</config>
